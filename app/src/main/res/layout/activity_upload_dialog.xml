<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtCamera"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/clickable_bg"
            android:clickable="true"
            android:drawableStart="@drawable/ic_baseline_camera_alt_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="CAMERA"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimaryDark"></LinearLayout>


        <TextView
            android:id="@+id/txtGallary"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/clickable_bg"
            android:clickable="true"
            android:drawableStart="@drawable/ic_baseline_image_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="GALLERY"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>